     <script>
      const urlParts = window.location.pathname.split("/");
      const userId = urlParts[urlParts.length - 1];

      // Load user data
      async function loadUserData() {
        try {
          const res = await fetch(`/admin/get-user/${userId}`);
          const data = await res.json();

          if (data.success) {
            const u = data.data;
            document.getElementById("name").value = u.name;
            document.getElementById("email").value = u.email;
            document.getElementById("phone").value = u.phone;
          } else {
            Swal.fire("Error!", data.message, "error");
          }
        } catch (err) {
          Swal.fire("Error!", "Failed to load user data.", "error");
        }
      }

      loadUserData();

      // Submit updated data
      document.getElementById("edit_user").addEventListener("submit", async function (e) {
        e.preventDefault();

        ["name", "email", "phone"].forEach(field => {
          const input = document.getElementById(field);
          const feedback = document.getElementById(field + "Error");
          input.classList.remove("is-invalid");
          feedback.textContent = "";
        });

        const formData = {
          name: document.getElementById("name").value.trim(),
          email: document.getElementById("email").value.trim(),
          phone: document.getElementById("phone").value.trim()
        };

        try {
          const res = await fetch(`/admin/update-user/${userId}`, {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(formData)
          });

          const data = await res.json();

          if (res.status === 400 && data.errors) {
            Object.keys(data.errors).forEach(field => {
              const input = document.getElementById(field);
              const feedback = document.getElementById(field + "Error");
              if (input && feedback) {
                input.classList.add("is-invalid");
                feedback.textContent = data.errors[field];
              }
            });
          } else if (res.status === 200 && data.success) {
            Swal.fire({
              title: "Updated!",
              text: data.message || "User updated successfully!",
              icon: "success",
              timer: 1500,
              showConfirmButton: false,
              background: "#1e1e2f",
              color: "#ffffff",
              iconColor: "#00d97e"
            }).then(() => {
              window.location.href = "/users-list";
            });
          } else {
            Swal.fire("Error!", data.message || "Something went wrong.", "error");
          }
        } catch (err) {
          console.error("Error:", err);
          Swal.fire("Error!", "Failed to update user.", "error");
        }
      });
    </script>
