        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            const typeSelect = document.getElementById("type");
            const priceContainer = document.getElementById("priceContainer");
            const priceInput = document.getElementById("price");
            const urlParts = window.location.pathname.split("/");
            const courseId = urlParts[urlParts.length - 1];

            // Toggle price field based on type
            typeSelect.addEventListener("change", () => {
                if (typeSelect.value === "paid") {
                priceContainer.style.display = "block";
                priceInput.setAttribute("required", "true");
                } else {
                priceContainer.style.display = "none";
                priceInput.removeAttribute("required");
                priceInput.value = "";
                }
            });

            // Load course details to prefill form
            async function loadCourseData() {
                try {
                const res = await fetch(`/admin/get-course/${courseId}`);
                const data = await res.json();

                if (data.success) {
                    const c = data.data;
                    document.getElementById("title").value = c.title;
                    document.getElementById("description").value = c.description;
                    document.getElementById("type").value = c.type;
                    if (c.type === "paid") {
                    priceContainer.style.display = "block";
                    document.getElementById("price").value = c.price;
                    }
                } else {
                    Swal.fire("Error!", data.message, "error");
                }
                } catch (err) {
                Swal.fire("Error!", "Failed to load course data.", "error");
                }
            }

            loadCourseData();

            // Submit updated data
            document.getElementById("edit_course").addEventListener("submit", async function (e) {
                e.preventDefault();

                ["title", "description", "type", "price"].forEach(field => {
                const input = document.getElementById(field);
                const feedback = document.getElementById(field + "Error");
                if (input) input.classList.remove("is-invalid");
                if (feedback) feedback.textContent = "";
                });

                const formData = {
                title: document.getElementById("title").value.trim(),
                description: document.getElementById("description").value.trim(),
                type: document.getElementById("type").value,
                price: document.getElementById("price")?.value.trim() || null
                };

                try {
                const res = await fetch(`/admin/update-course/${courseId}`, {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(formData)
                });

                const data = await res.json();

                if (res.status === 400 && data.errors) {
                    Object.keys(data.errors).forEach(field => {
                    const input = document.getElementById(field);
                    const feedback = document.getElementById(field + "Error");
                    if (input && feedback) {
                        input.classList.add("is-invalid");
                        feedback.textContent = data.errors[field];
                    }
                    });
                } else if (res.status === 200 && data.success) {
                    Swal.fire({
                    title: "Updated!",
                    text: data.message || "Course updated successfully!",
                    icon: "success",
                    timer: 1500,
                    showConfirmButton: false,
                    background: "#1e1e2f",
                    color: "#ffffff",
                    iconColor: "#00d97e"
                    }).then(() => {
                    window.location.href = "/course-list";
                    });
                } else {
                    Swal.fire("Error!", data.message || "Something went wrong.", "error");
                }
                } catch (err) {
                console.error("Error:", err);
                Swal.fire("Error!", "Failed to update course.", "error");
                }
            });
        </script>

